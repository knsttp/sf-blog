{% extends 'base.html.twig' %}

{% block header %}Article Created or Modified{% endblock %}

{% block content %}
<table class="table">
    <tbody>
        <tr>
            <td>Title:</td>
            <td>{{ article.title }}</td>
        </tr>
        <tr>
            <td>Author:</td>
            <td>{{ article.author }}</td>
        </tr>
        <tr>
            <td>Article Body:</td>
            <td>{{ article.body }}</td>
        </tr>
        <tr>
            <td>Homepage:</td>
            <td>{{ article.url }}</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-primary" href="/articles">View All</a> 
<a class="btn btn-primary" href="/article/edit/{{ article.id }}">Modify</a>
{% endblock %}